# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
#        output_format = "i3bar"
        colors = true
        interval = 1
}

#order += "ipv6"
order += "disk /"
order += "disk /home"
order += "disk /home/strubbl/movies"
order += "disk /home/strubbl/movies/serien"
order += "disk /mnt/tmp"
order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "wireless wlan0"
order += "ethernet enp3s0"
#order += "battery 0"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

cpu_temperature 0 {
        format = "╽ %degrees °C"
        max_threshold = 60
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

wireless wlan0 {
        format_up = "↟ %ip [%essid %bitrate %quality]"
        format_down = "↟ down"
}

ethernet enp3s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "↔ %ip [%speed]" 
        format_down = "↮"
}

battery 0 {
        format = "%status %percentage %remaining"
        status_chr = "⚡"
        status_bat = "⌛"
        status_full = "☢"
        format_down = "no battery"
        last_full_capacity = true
        threshold_type = time
        low_threshold = 30
}

run_watch DHCP {
        pidfile = "/var/run/dhclient-*.pid"
        format = "%title"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
        format = "%title"
}

tztime local {
        format = "⌚ %d.%m.%Y %H:%M:%S"
}

cpu_usage {
        format = "㍶ %usage"
}

load {
        format = "%1min %5min %15min"
}

volume master {
        format = "♫ %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
        format = "/ %free"
        low_threshold = 10
}

disk "/home" {
        format = "~ %free"
        low_threshold = 10
}

disk "/home/strubbl/movies" {
        format = "m %free"
        low_threshold = 10
}

disk "/home/strubbl/movies/serien" {
        format = "s %free"
        low_threshold = 10
}

disk "/mnt/tmp" {
        format = "tmp %free"
        low_threshold = 10
}

