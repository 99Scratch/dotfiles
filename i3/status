# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
#        output_format = "i3bar"
        colors = true
        interval = 1
}

#order += "ipv6"
order += "disk /"
order += "disk /home"
order += "ethernet eth0"
order += "ethernet eth1"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "tztime local"

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "eth0 ↔ %ip [%speed]"
        format_down = "eth0 ↮"
}

ethernet eth1 {
        # if you use %speed, i3status requires root privileges
        format_up = "eth1 ↔ %ip [%speed]"
        format_down = "eth1 ↮"
}

tztime local {
        format = "⌚ %d.%m.%Y %H:%M:%S"
}

cpu_usage {
        format = "㍶ %usage"
}

load {
        format = "%1min %5min %15min"
}

volume master {
        format = "♫ %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
        format = "/ %free"
}

disk "/home" {
        format = "~ %free"
}

